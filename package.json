{
  "name": "iot-portfolio",
  "version": "1.0.0",
  "description": "PG IoT Fresher Portfolio - MERN Developer & CoPLO Specialist",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
    "frontend": "cd frontend && npm start",
    "backend": "cd backend && npm run dev", 
    "server": "cd backend && npm start",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install-client": "cd frontend && npm install",
    "install-server": "cd backend && npm install",
    "install-all": "npm install && npm run install-client && npm run install-server",
    "seed": "cd backend && node seed.js",
    "clean": "rimraf node_modules frontend/node_modules backend/node_modules",
    "reset": "npm run clean && npm run install-all"
  },
  "keywords": ["portfolio", "react", "express", "mongodb", "iot", "mern"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
